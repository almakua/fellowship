# =============================================================================
# Secrets Template
# =============================================================================
# Copia questo file in secrets.yml e inserisci i valori reali
# Poi cripta con: ansible-vault encrypt vault/secrets.yml
# =============================================================================

# Cloudflare API Token per cert-manager DNS challenge
# Crea un token API su https://dash.cloudflare.com/profile/api-tokens
# Permessi richiesti: Zone:DNS:Edit per la zona mbianchi.me
cloudflare_api_token: "your-cloudflare-api-token-here"

# Email associata all'account Cloudflare
cloudflare_email: "your-email@example.com"

